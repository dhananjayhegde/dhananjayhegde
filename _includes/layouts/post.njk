---
layout: layouts/base.njk
section: post
---

<article class="layout__cozy">
  <div class="hero">
    <h1 class="title">{{ title }}</h1>
    <div class="metadata">
      <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time>
      <div class="tag-list">{% include "components/tag-list-inline.njk" %}</div>
    </div>
  </div>
  {{ layoutContent | safe }}
  <div class="metadata">
    <div class="tag-list">{% include "components/tag-list-inline.njk" %}</div>
  </div>
  {% include "components/social-share.njk" %}
</article>
{% set previousPost = collections.post | getPreviousCollectionItem %}
{% set nextPost = collections.post | getNextCollectionItem %}
<nav class="content-footer" aria-label="pagination">
  {% if nextPost %}
    <a href="{{ nextPost.url }}">&larr; Next</a>
  {% endif %}
  <a href="{{ '/blog/' | url }}">All Posts</a>
  {% if previousPost %}
    <a href="{{ previousPost.url }}">Previous &rarr;</a>
  {% endif %}
</nav>